body {
	position: relative;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	max-height: 100vh;
	max-width: 100vw;
	background-image: url("../images/background.png");
	background-size: cover;
	background-repeat: no-repeat;
	background-attachment: fixed;
	background-position: center;
	background-color: #320a62;
	font-family: Arial;
}


/* menu */

#up {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

#menu-toggle {
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 16pt;
	display: flex;
	flex-direction: column;
	background-color: rgba(100, 100, 100, 0.3);
	width: 200px;
	height: 50px;
	margin: 3px;
	color: rgb(255, 255, 50);
	border: 2px solid transparent;
	border-color: rgb(255, 255, 50);
	animation: text-neon-animation 1.5s infinite alternate,
			   neon-animation 1.5s infinite alternate;
}

#menu.hidden {
	display: none;
}

#menu {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	font-size: 16pt;
	z-index: 9999;
	top: 103px;
}

.menu {
	display: flex;
	flex-direction: column;
	background-color: rgba(100, 100, 100, 0.7);
	width: 200px;
	height: 50px;
	margin: 3px;
	border: 2px solid transparent;
	border-color: rgb(255, 255, 50);
	animation: neon-animation 1.5s infinite alternate;
}

#current-html {
	border: 0;
	justify-content: center;
    align-items: center;
	background-color: rgba(0, 0, 0, 0);
	color: rgb(50, 255, 255);
	animation: current-text-neon-animation 1.5s infinite alternate;
}

#current-html p {
	display: flex;
    justify-content: center;
    align-items: center;
	width: 200px;
	height: 50px;
}

#menu a {
	display: flex;
    justify-content: center;
    align-items: center;
	width: 200px;
	height: 50px;
	color: rgb(255, 255, 50);
	text-decoration: none;
	backdrop-filter: blur(2px);
	-webkit-backdrop-filter: blur(2px);
	animation: text-neon-animation 1.5s infinite alternate-reverse;
}

#logo {
	position: fixed;
	top: 5px;
	left: 5px;
	margin-right: 275px;
}

#logo img{
	width: 75px;
	height: 75px;
}

#music {
