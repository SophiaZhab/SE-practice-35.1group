/* about.html */

#about-main {
	display: flex;
	flex-direction: column;
	justify-content: center;
    align-items: center;
}

#about {
	justify-content: center;
    align-items: center;
	position: absolute;
	top: 300px;
	color: rgb(50, 255, 255);
	animation: current-text-neon-animation 1.5s infinite alternate;
}

#about-logo {
	position: absolute;
