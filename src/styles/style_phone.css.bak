	height: 125px;
}

.about {
	display: flex;
	justify-content: center;
    align-items: center;
	margin: 20px;
}

.about a{
	position: absolute;
	display: flex;
	justify-content: center;
    align-items: center;
	position: absolute;
	width: 200px;
	height: 50px;
	top: 200px;
	color: rgb(255, 255, 50);
	text-decoration: none;
	font-size: 16pt;
	text-align: center;
	backdrop-filter: blur(2px);
	-webkit-backdrop-filter: blur(2px);
	border: 2px solid transparent;
	background-color: rgba(100, 100, 100, 0.3);
	animation: neon-animation 1.5s infinite alternate,
			   text-neon-animation 1.5s infinite alternate-reverse;
}


/* animations */

@keyframes neon-animation {
    0% {
        border-color: rgba(255, 255, 50, 1);
		box-shadow:  0 0 3px 3px rgba(255, 255, 50, 1);
    }
	100% {
        border-color: rgba(255, 255, 50, 0.7);
		box-shadow:  0 0 3px 3px rgba(255, 255, 50, 0.5);
    }
}

@keyframes current-neon-animation {
    0% {
        border-color: rgba(255, 255, 50, 1);
		box-shadow:  0 0 3px 3px rgba(50, 255, 255, 1);
    }
	100% {
        border-color: rgba(255, 255, 50, 0.7);
		box-shadow:  0 0 3px 3px rgba(50, 255, 255, 0.5);
    }
}

@keyframes text-neon-animation {
    0% {
		text-shadow: 0 0 5px rgba(255, 255, 50, 0.8);
    }
	100% {
		text-shadow: 0 0 5px rgba(255, 255, 50, 0.5);
    }
}

@keyframes current-text-neon-animation {
    0% {
		text-shadow: 0 0 5px rgba(50, 255, 255, 0.8);
    }
	100% {
		text-shadow: 0 0 5px rgba(50, 255, 255, 0.5);
    }
}

@keyframes shake {
	0% {
		transform: translate(4px, 4px) rotate(0deg);
	}

	10% {
		transform: translate(-4px, -4px) rotate(-1deg);
	}

	20% {
		transform: translate(-7px, 0px) rotate(1deg);
	}

	30% {
		transform: translate(7px, 4px) rotate(0deg);
	}

	40% {
		transform: translate(4px, -4px) rotate(1deg);
	}

	50% {
		transform: translate(-4px, 4px) rotate(-1deg);
	}

	60% {
		transform: translate(-7px, 4px) rotate(0deg);
	}

	70% {
		transform: translate(7px, 4px) rotate(-1deg);
	}

	80% {
		transform: translate(-4px, -4px) rotate(1deg);
	}

	90% {
		transform: translate(4px, 4px) rotate(0deg);
	}

	100% {
		transform: translate(4px, -4px) rotate(-1deg);
	}
}

